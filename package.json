{
  "name": "wikipedia-preview",
  "version": "1.0.3",
  "description": "Shows Wikipedia article preview in a popup",
  "main": "dist/wikipedia-preview.production.js",
  "scripts": {
    "test": "mocha --require ignore-styles,@babel/register,jsdom-global/register",
    "test:watch": "mocha --require ignore-styles,@babel/register,jsdom-global/register -w",
    "test:fix-lint": "eslint test --fix",
    "coverage": "nyc npm test",
    "build:dev": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "build": "npm run build:dev && npm run build:prod",
    "dev": "webpack-dev-server --mode development --host=0.0.0.0 --disable-host-check",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "author": "Wikimedia Foundation",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/register": "^7.8.3",
    "@storybook/addon-actions": "^6.0.2",
    "@storybook/addon-essentials": "^6.0.2",
    "@storybook/addon-links": "^6.0.2",
    "@storybook/html": "^6.0.2",
    "babel-loader": "^8.0.6",
    "bufferutil": "^4.0.1",
    "canvas": "^2.6.1",
    "compression-webpack-plugin": "^4.0.0",
    "css-loader": "^3.4.2",
    "eslint": "^7.3.1",
    "eslint-config-wikimedia": "^0.16.2",
    "eslint-loader": "^4.0.2",
    "ignore-emit-webpack-plugin": "^2.0.2",
    "ignore-styles": "^5.0.1",
    "jsdom": "^16.0.1",
    "jsdom-global": "^3.0.2",
    "less": "^3.10.3",
    "less-loader": "^5.0.0",
    "less-plugin-inline-svg": "^2.0.1",
    "mini-css-extract-plugin": "^0.9.0",
    "mocha": "^7.0.1",
    "nyc": "^15.0.0",
    "react-is": "^16.13.1",
    "sinon": "^9.0.2",
    "style-loader": "^1.1.3",
    "stylelint-config-wikimedia": "^0.10.1",
    "stylelint-webpack-plugin": "^2.1.0",
    "utf-8-validate": "^5.0.2",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1"
  },
  "dependencies": {}
}
